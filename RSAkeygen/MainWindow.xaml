<Window x:Class="RSAkeygen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSAkeygen"
        mc:Ignorable="d"
        Title="RSA Key Generator" Height="350" Width="525">
    <Grid Margin="0,0,124,75">
        <Button Content="Generate RSA key pair" HorizontalAlignment="Left" VerticalAlignment="Top" Width="129" RenderTransformOrigin="3.524,3.976" Margin="153,62,0,0" Click="Button_Click"/>
        <Button x:Name="ImportButton" Content="Load RSA public key from file" HorizontalAlignment="Left" VerticalAlignment="Top" Width="164" RenderTransformOrigin="3.524,3.976" Margin="153,138,0,0" Click="Button_Click_1"/>
        <Button Content="Send RSA public key" HorizontalAlignment="Left" VerticalAlignment="Top" Width="118" RenderTransformOrigin="3.524,3.976" Margin="153,196,0,0" Click="Button_Click_2"/>
        <TextBlock x:Name="tblock1" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="153,20,0,0" Width="230" Height="42"><Run Text="No Key Loaded"/><LineBreak/><Run/></TextBlock>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="153,117,0,0"><Run Text="Loaded public key"/><Run Text=":"/></TextBlock>
        <TextBlock x:Name="loadedstatusblock" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="257,117,0,0"><Run Text="non"/><Run Text="e loaded"/></TextBlock>
        <TextBlock x:Name="EmailButtonLabel" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="153,175,0,0" Width="219"><Run Text="Click to send key to email address"/><LineBreak/><Run/></TextBlock>
        <TextBox x:Name="KeySizeField" HorizontalAlignment="Left" Height="20" Margin="10,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138"/>
        <TextBox x:Name="EmailField" HorizontalAlignment="Left" Height="20" Margin="10,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138"/>
        <TextBlock x:Name="KeySizeLabel" HorizontalAlignment="Left" Height="15" Margin="13,43,0,0" TextWrapping="Wrap" Text="Enter Key Size:" VerticalAlignment="Top" Width="91"/>
        <TextBlock x:Name="EmailLabel" HorizontalAlignment="Left" Height="17" Margin="13,175,0,0" TextWrapping="Wrap" Text="Enter Email:" VerticalAlignment="Top" Width="106"/>

    </Grid>
</Window>
